<UserControl x:Class="canvasDrawing.ButtonsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:canvasDrawing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#ffff">
    <Grid>
        <Border>
            <Border.Background >
            <LinearGradientBrush >

                <GradientStop Color="#fb6161" Offset="0.6"/>
            </LinearGradientBrush>
        </Border.Background>
        <StackPanel Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Center" Name="ShapesSelectPanel">
            <Label Content="Draw Shapes" Foreground="White" FontSize="20" Margin="0 10 0 50" />

           


        </StackPanel>
        </Border>
    </Grid>
</UserControl>
