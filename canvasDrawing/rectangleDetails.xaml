<UserControl x:Class="canvasDrawing.rectangleDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:canvasDrawing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="40 20 0 0 " >

            <Label Content="Length :"/>
            <TextBox x:Name="length" Width="100" Background="LightGray"/>
            
            <Label Content="Width :"/>
            <TextBox x:Name="width" Width="100" Background="LightGray"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 50">
            <Button x:Name="DrawRectangle" Content="Draw Shape" Click="showRectangle"/>
        </StackPanel>
    </Grid>
</UserControl>
